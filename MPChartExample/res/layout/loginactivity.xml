<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    android:orientation="vertical" >

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        >
         <TextView
             android:id="@+id/login_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:textSize="35dp"
             android:textStyle="bold"
             android:text="@string/app_name" />
     </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:gravity="center"
        >
        
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            >
            <EditText 
            	android:id="@+id/et_loginactivity_use"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:background="@drawable/loginactivity_edit_bg"
            	android:drawableLeft="@drawable/loginactivity_use"
            	android:singleLine="true"
            	android:drawablePadding="15dip"
            	android:hint="手机号码"
            	android:textColorHint="#000000"
            	android:inputType="phone"
                android:maxLength="11"
            	android:textColor="#000000"
                android:textSize="30dp"
            	/>
            <ImageButton 
                android:id="@+id/ib_loginactivity_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginactivity_del"
                android:layout_gravity="center_vertical|right"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            >
            <EditText
                android:id="@+id/et_loginactivity_psd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginactivity_edit_bg"
                android:drawableLeft="@drawable/loginactivity_pasd"
                android:singleLine="true"
                android:drawablePadding="15dip"
                android:hint="密码"
                android:inputType="textPassword"

                android:layout_marginTop="30dip"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:text=""
                android:textSize="30dp"
                />
            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_gravity="center_vertical|right"
                android:checked="true"
                />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.4"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button 
            android:id="@+id/btn_loginactivity_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/cargoinfo_item_jiaoyibg"
            android:text="登 录"
            android:layout_marginLeft="46dip"
            android:layout_marginRight="46dip"
            android:textColor="#ddff7f27"
            android:textSize="30dp"
            />
        <Button 
            android:id="@+id/btn_loginactivity_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/cargoinfo_item_jiaoyibg"
            android:text="注 册"
            android:layout_marginLeft="46dip"
            android:layout_marginRight="46dip"
            android:layout_marginTop="22dip"
            android:textColor="#ddff7f27"
            android:textSize="30sp"
            />
        
        <Button
            android:id="@+id/tv_loginactivity_forget"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_weight="0.4"
            android:text="忘记密码？"
            android:background="@drawable/loginactivity_register"
            android:layout_marginTop="20dip"
            android:textSize="15sp"
            android:visibility="visible"
            />
    </LinearLayout>

</LinearLayout>