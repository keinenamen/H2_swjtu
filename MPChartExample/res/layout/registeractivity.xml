<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical" >

    <include layout="@layout/left_head"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cargoinfo_item_line"
        android:layout_marginTop="15dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/shape_style"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strTel"
            android:layout_margin="15dip"
            android:textSize="25dp"
            android:textColor="#5D5D5D"
            />
        <EditText
            android:id="@+id/et_registeractivity_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dip"
            android:hint="请输入你的手机号码"
            android:textColorHint="#66000000"
            android:textSize="20dp"
            android:inputType="phone"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cargoinfo_item_line"
        android:layout_marginTop="0dip"
        android:layout_marginLeft="15dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/shape_style"
        >
        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strPsd"
            android:layout_margin="15dip"
            android:textSize="25dp"
            android:textColor="#5D5D5D"
            />
        <EditText
            android:id="@+id/et_registeractivity_psd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dip"
            android:hint="@string/strPsdhint"
            android:inputType="textPassword"
            android:textColorHint="#66000000"
            android:textSize="20dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cargoinfo_item_line"
        android:layout_marginTop="0dip"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strPsd"
            android:textColor="@color/main_hot_black"
            android:layout_margin="15dip"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="10dip"
            android:text="@string/strPsdhint"
            android:visibility="invisible"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        >
        <EditText
            android:id="@+id/et_registeractivity_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/shape_style"
            android:layout_weight="1"
            android:layout_marginLeft="15dip"
            android:inputType="number"
            android:paddingLeft="13dip"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/btn_registeractivity_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/shape_style"
            android:layout_weight="1"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="30dip"
            android:text="获取验证码"
            android:textColor="#5D5D5D"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_registeractivity_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码错误!"
            android:textColor="#990000"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="12dip"
            android:visibility="invisible"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn_registeractivity_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cargoinfo_item_jiaoyibg"
            android:layout_marginTop="22dip"
            android:text="注  册"
            android:textColor="#ffffff"
            android:textSize="30dp"
            />
    </LinearLayout>

</LinearLayout>